{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  // Serilog configuration.
  "serilog": {
    "writeTo": [
      {
        "name": "RollingFile",
        "args": {
          "pathFormat": "logs/log-{Date}.txt"
        }
      }
    ]
  }
}